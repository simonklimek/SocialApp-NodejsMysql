          form.col.s12(action="/users/register" enctype="multipart/form-data" method="POST")
               .row     
                    div.input-field.col.s12
                         input.validate(type="text", name="username", placeholder="Username", required)

                    div.input-field.col.s12
                         input.validate(type="email", name="email", placeholder="Email", required)
                    
                    div.input-field.col.s12
                         input.validate(type="password", name="password", placeholder="Password", required)
                    
               .row.valign-wrapper
                    .file-field.input-field.col.m6.s12
                         .btn.orange.lighten-4
                              span Attach picture
                              input(type="file", name="avatar" required)
                         .file-path-wrapper
                              input.file-path.validate(type="text")
                    .col.m6.s12
                         button.btn.waves-effect.orange.waves-light.btn-large.right(type="submit", value="Submit") Register
                              i.material-icons.right check