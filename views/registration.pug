extends layout
block content
     div.row
        div.col.s12
          
     section.container
          h1 Register

          if err
               p.error= err
          
          if (message)
               p.message=message + ", "   
                    a(href="/addpost") start posting now!

          
          //- form(action="/users/register" enctype="multipart/form-data" method="POST" )
